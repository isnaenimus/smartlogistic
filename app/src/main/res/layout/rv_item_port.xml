<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_border_with_radius"
    android:gravity="start"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_port_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Nama Pelabuhan"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_port_city"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Nama Kota"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/dash"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_port_province"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Nama Provinsi"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/comma"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_port_country"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Nama Negara"
            android:textSize="12sp" />

    </LinearLayout>


</LinearLayout>