<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.otp.OtpActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/snackbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingHorizontal="16dp"
            android:paddingVertical="30dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="152dp"
                android:layout_height="33dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/logo"
                android:layout_gravity="left" />


            <TextView
                style="@style/TitleBoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:text="Kode OTP" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_asign_otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:text="@string/asign_otp"
                    android:textColor="#757575"
                    android:textSize="14sp" />
<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:textColor="@color/blue"-->
<!--                    android:text="Daftar"-->
<!--                    android:textSize="14sp"-->
<!--                    android:layout_marginStart="2dp"-->
<!--                    android:layout_marginLeft="2dp" />-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="70dp"
                android:orientation="vertical">

                <com.chaos.view.PinView
                    android:id="@+id/input_otp_login"
                    style="@style/PinWidget.PinView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="25dp"
                    android:inputType="number"
                    android:textColor="@color/blue_80"
                    android:textSize="24sp"
                    app:itemCount="6"
                    app:itemHeight="40dp"
                    app:itemRadius="4dp"
                    app:itemWidth="40dp"
                    app:lineColor="@color/black_20" />

<!--                <com.google.android.material.textfield.TextInputLayout-->
<!--                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    app:hintEnabled="true"-->
<!--                    app:endIconMode="clear_text">-->

<!--                    <com.google.android.material.textfield.TextInputEditText-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:id="@+id/input_otp_login"-->
<!--                        android:inputType="number"-->
<!--                        android:hint="Kode OTP"-->
<!--                        android:textColor="@color/black"/>-->

<!--                </com.google.android.material.textfield.TextInputLayout>-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="00:"/>

                <TextView
                    android:id="@+id/tv_countdown"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lineSpacingExtra="6sp"
                    android:clickable="true"
                    android:text="00"/>
            </LinearLayout>

<!--            <TextView-->
<!--                android:id="@+id/tv_countdown"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:gravity="center"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:lineSpacingExtra="6sp"-->
<!--                android:clickable="true"-->
<!--                android:text="00:02"/>-->

            <TextView
                android:id="@+id/tv_link_resend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="6sp"
                android:text="Kirim Ulang"
                android:textColor="@color/info"
                android:focusable="true" />

            <com.google.android.material.button.MaterialButton
                style="@style/ButtonPrimary"
                android:id="@+id/btn_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:text="Lanjut"/>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>